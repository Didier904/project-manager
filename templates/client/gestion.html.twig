{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="container mt-5">

    <!-- Hero -->
    <div class="p-4 mb-4 bg-primary text-white rounded-3 shadow-sm">
        <h1 class="display-6 fw-bold">Gestion des clients</h1>
        <p class="fs-6">Liste de tous les clients enregistrés dans votre entreprise.</p>
    </div>

    <!-- Bouton création -->
    <div class="mb-3 text-end">
        <a href="{{ path('app_client_new') }}" class="btn btn-success">
            + Nouveau client
        </a>
    </div>

    <!-- Table clients -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Société</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.id }}</td>
                        <td class="fw-semibold">{{ client.nom }}</td>
                        <td>{{ client.email }}</td>
                        <td>{{ client.telephone }}</td>
                        <td>{{ client.Societe }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-sm btn-outline-primary">
                                Voir
                            </a>
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-outline-warning">
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Aucun client trouvé
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bouton Valider -->
    <div class="mt-3 text-end">
        <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
            VALIDER
        </a>
    </div>

    <!--Bouton Retour-->
    <div class="mt-3 text-end">
        <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
        Retour
        </a>
    </div>
    <br>

</div>
{% endblock %}
