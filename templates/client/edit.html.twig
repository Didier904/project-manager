{% extends 'base.html.twig' %}

{% block title %}Modifier le client{% endblock %}

{% block body %}
<div class="container mt-5">

    <!-- Hero -->
    <div class="p-4 mb-4 bg-warning text-dark rounded-3 shadow-sm">
        <h1 class="display-6 fw-bold">Modifier le client</h1>
        <p class="fs-6">Mettez à jour les informations du client.</p>
    </div>

    <!-- Card formulaire -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            {{ include('client/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_client_index') }}" class="btn btn-outline-primary">
            ← Retour à la liste
        </a>

        {{ include('client/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
