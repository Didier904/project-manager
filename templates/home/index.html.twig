{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
<style>
    .glass {
        position: relative;
        background: rgba(255, 255, 255, 0.15); /* Blanc transparent */
        backdrop-filter: blur(10px) saturate(150%);
        -webkit-backdrop-filter: blur(10px) saturate(150%);
        border-radius: 2rem; /* Coins arrondis */
        border: 1px solid rgba(255, 255, 255, 0.3); /* Bord légèrement visible */
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2); /* Ombre douce */
        overflow: hidden; /* Pour que le pseudo-élément reste à l'intérieur */
        color: white; /* Texte en blanc */
    }

    .glass::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 2rem;
        background: linear-gradient(135deg, rgba(255,255,255,0.25) 0%, rgba(255,255,255,0) 100%);
        pointer-events: none;
    }

    /* Optionnel : boutons avec texte blanc */
    .glass .btn-success {
        color: white;
    }
</style>

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="glass p-5 text-center col-md-8 col-lg-6">

        <h1 class="display-4 fw-bold mb-3">Bienvenue sur KAMIKASSE</h1>

        <p class="fs-5 mb-4">
            <strong>KAMIKASSE</strong> est votre plateforme sécurisée
            pour gérer vos clients, données et activités professionnelles.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="{{ path('app_register') }}" class="btn btn-success btn-lg px-4">
                Accéder
            </a>
        </div>
    </div>
</div>
{% endblock %}
