<h3>Chat avec {{ recipient.email }}</h3>

<div class="chat-box border p-3 mb-3" style="height:300px; overflow-y:auto;">
    {% for msg in messages %}
        <div class="mb-2 {{ msg.sender == app.user ? 'text-end' : 'text-start' }}">
            <b>{{ msg.sender.email }}:</b> {{ msg.content }}
            <small class="text-muted">{{ msg.createdAt|date('H:i') }}</small>
        </div>
    {% endfor %}
</div>

{{ form_start(form) }}
{{ form_widget(form) }}
<button class="btn btn-primary mt-2">Envoyer</button>
{{ form_end(form) }}
